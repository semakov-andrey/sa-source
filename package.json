{
  "browserslist": [
    "> 0.5%"
  ],
  "name": "sa-source",
  "version": "1.1.7",
  "description": "sa-source",
  "keywords": [
    "source",
    "pug",
    "scss",
    "js",
    "woff",
    "woff2",
    "jpg",
    "gif",
    "png",
    "webp",
    "svg",
    "mp4"
  ],
  "main": "install.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:semakov-andrey/sa-source.git"
  },
  "author": "Semakov Andrey <semakov.andrey.web@yandex.ru>",
  "license": "ISC",
  "scripts": {
    "install": "node install.js",
    "start": "gulp serve",
    "build": "gulp build --production",
    "module": "node node_modules/sa-template-1/module.js",
    "lint-css": "stylelint src/**/*.scss -f verbose --fix",
    "lint-js": "eslint src/**/*.js --fix"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "body-scroll-lock": "^2.6.1",
    "bootstrap": "^4.2.1",
    "css-vars-ponyfill": "^1.17.2",
    "ncp": "^2.0.0",
    "normalize.css": "^8.0.1",
    "sa-polyfills": "^1.1.2"
  },
  "devDependencies": {
    "sa-template-1": "^3.7.2"
  },
  "config": {
    "devServer": {
      "secure": false,
      "host": "localhost",
      "open": false,
      "port": "3000"
    },
    "entries": {
      "css": [
        "main"
      ],
      "js": [
        "main"
      ]
    },
    "directories": {
      "source": "src",
      "development": "tmp",
      "production": "build",
      "tasks": {
        "copy": [
          "other",
          ""
        ],
        "html": [
          "pages",
          ""
        ],
        "css": [
          "styles",
          "styles"
        ],
        "js": [
          "scripts",
          "scripts"
        ],
        "fonts": [
          "fonts",
          "fonts"
        ],
        "images": [
          "images",
          "images"
        ],
        "sprite": [
          "images/svg",
          "images"
        ]
      }
    },
    "tasks": [
      "copy",
      "html",
      "css",
      "js",
      "fonts",
      "images",
      "sprite"
    ]
  }
}
